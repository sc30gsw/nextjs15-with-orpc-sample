{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "correctness": {
        "noNodejsModules": "off"
      },
      "suspicious": {
        "noReactSpecificProps": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "overrides": [
    {
      "include": [
        "next.config.ts",
        "tailwind.config.ts",
        "postcss.config.mjs",
        "layout.tsx",
        "page.tsx",
        "loading.tsx",
        "error.tsx",
        "not-found.tsx",
        "middleware.ts",
        "default.tsx",
        "./src/features/**/*/route.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off",
            "useNamingConvention": "off"
          }
        }
      }
    },
    {
      "include": [
        "env.ts",
        "tailwind.config.ts",
        "*.d.ts",
        "./src/features/**/actions/*.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          }
        }
      }
    },
    {
      "include": ["./src/features/**/types/schemas/*.ts"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off",
            "noNamespaceImport": "off"
          }
        }
      }
    },
    {
      "include": ["./src/features/**/actions/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "useAwait": "off"
          }
        }
      }
    },
    {
      "include": ["use-safe-form.ts"],
      "linter": {
        "rules": {
          "suspicious": { "noExplicitAny": "off" }
        }
      }
    },
    {
      "include": ["*.d.ts"],
      "linter": { "rules": { "correctness": { "noUnusedVariables": "off" } } }
    }
  ]
}
